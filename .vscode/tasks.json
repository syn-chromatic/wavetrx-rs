{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "command": "cargo run --release --bin ${input:variableInput}",
      "problemMatcher": [
        "$rustc"
      ],
      "label": "rust: cargo run",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "inputs": [
    {
      "id": "variableInput",
      "type": "promptString",
      "description": "Enter the value for VARIABLE"
    }
  ]
}